@model Farmer
<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-5 ftco-animate">
                <a href="images/product-1.jpg" class="image-popup"><img src="@Model.ImageUrl" class="img-fluid" alt="Colorlib Template"></a>
            </div>
            <div class="col-lg-6 product-details pl-md-5 ftco-animate">
                <h3>@Model.FirstName</h3>
                <h3>@Model.LastName</h3>
               
                <p>
                    @Model.Description
                </p>
                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="form-group d-flex">
                        </div>
                    </div>
                    <div class="w-100"></div>
                    <div class="w-100"></div>
                   
                </div>
            </div>
        </div>
    </div>
</section>